<Window x:Class="MossFrp.login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MossFrp" xmlns:hc="https://handyorg.github.io/handycontrol"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="请登录" Height="450" Width="400">
    <Grid Height="450" Width="400">
        <Label Content="使用MossFrp账号登录" HorizontalAlignment="Left" Height="39" Margin="109,35,0,0" VerticalAlignment="Top" Width="188" BorderBrush="{x:Null}" FontSize="16"/>
        <hc:TextBox x:Name="qq" hc:InfoElement.TitlePlacement="Left" TextType="Number" hc:InfoElement.Placeholder="你的QQ号" hc:InfoElement.Title="QQ号" hc:InfoElement.Necessary="True" Margin="22,91,28,324"/>
        <hc:PasswordBox x:Name="pwd" hc:TitleElement.TitlePlacement="Left" hc:InfoElement.Placeholder="密码（数据已被加密，我们无法查看）" hc:TitleElement.Title="密码" hc:InfoElement.Necessary="True" Margin="22,145,28,273"/>
        <Button x:Name="loginbtn" Style="{StaticResource ButtonPrimary}" Content="登录" HorizontalAlignment="Left" Margin="136,281,0,0" VerticalAlignment="Top" Width="121" Height="44" FontSize="14" FontFamily="Microsoft YaHei UI Light" Click="login_Click"/>
    </Grid>
</Window>
